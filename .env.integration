# N8N Integration Sync Configuration
# Copy to .env.integration and update with your actual values

# N8N API Configuration (Your actual n8n instance)
N8N_BASE_URL=https://your-n8n-instance.com  # Replace with your n8n instance URL
N8N_API_KEY=your-n8n-api-key                # Get from n8n Settings > API Keys

# Catalog Edge Database Configuration (Your GCP PostgreSQL)
DB_HOST=your-gcp-postgres-host               # Your GCP PostgreSQL host
DB_PORT=5432
DB_NAME=catalog-edge-db                      # Your catalog edge database name
DB_USER=your-username                        # Database username
DB_PASSWORD=your-password                    # Database password

# Optional: Sync Configuration
SYNC_CATEGORIES=Integration,App,Communication,Sales,Marketing
SYNC_DRY_RUN=false                          # Set to true for testing without DB writes
